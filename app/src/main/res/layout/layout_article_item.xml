<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/ivArticleListImage"
        android:layout_width="@dimen/dimen_50dp"
        android:layout_height="@dimen/dimen_50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tvArticleListTitle"
        android:src="@color/color_grey_8"
        android:layout_margin="@dimen/dimen_10dp"/>

    <TextView
        android:id="@+id/tvArticleListTitle"
        android:layout_width="@dimen/dimen_0dp"
        app:layout_constraintLeft_toRightOf="@id/ivArticleListImage"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="@dimen/dimen_10dp"
        android:textSize="@dimen/font_16sp"
        android:textColor="@color/color_grey_3"
        tools:text="Bitcoin Bitcoin Bitcoin BITCOIN!! So Sue Us."
        android:fontFamily="@font/montserrat_regular"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvArticleListAuthor"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/color_grey_8"
        app:layout_constraintLeft_toLeftOf="@id/tvArticleListTitle"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="@dimen/dimen_10dp"
        app:layout_constraintTop_toBottomOf="@id/tvArticleListTitle"
        android:fontFamily="@font/montserrat_regular"
        tools:text="By Hasan Al Ashri"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:background="@color/color_grey_d"
        app:layout_constraintTop_toBottomOf="@id/tvArticleListAuthor" />

</android.support.constraint.ConstraintLayout>