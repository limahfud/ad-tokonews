<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/ivArticleListImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tvArticleListTitle"
        android:src="#888888"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/tvArticleListTitle"
        android:layout_width="0dp"
        app:layout_constraintLeft_toRightOf="@id/ivArticleListImage"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="10dp"
        android:textSize="16sp"
        android:textColor="#333333"
        tools:text="Bitcoin Bitcoin Bitcoin BITCOIN!! So Sue Us."
        android:fontFamily="@font/montserrat_regular"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvArticleListAuthor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="#888888"
        app:layout_constraintLeft_toLeftOf="@id/tvArticleListTitle"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toBottomOf="@id/tvArticleListTitle"
        android:fontFamily="@font/montserrat_regular"
        tools:text="By Hasan Al Ashri"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="#dddddd"
        app:layout_constraintTop_toBottomOf="@id/tvArticleListAuthor" />

</android.support.constraint.ConstraintLayout>