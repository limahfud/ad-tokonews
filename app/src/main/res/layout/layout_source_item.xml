<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvSourceTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_10dp"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:textColor="#333333"
        android:textSize="@dimen/dimen_14sp"
        android:textStyle="bold"
        android:textAllCaps="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:fontFamily="@font/montserrat_regular"
        tools:text="ABC NEWS" />

    <TextView
        android:id="@+id/tvSourceUrl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_10dp"
        android:textColor="@color/color_grey_5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvSourceTitle"
        android:fontFamily="@font/montserrat_regular"
        tools:text="www.abcnews.go.com" />

    <TextView
        android:id="@+id/tvSourceDescription"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dimen_10dp"
        android:layout_marginLeft="@dimen/dimen_10dp"
        android:layout_marginRight="@dimen/dimen_10dp"
        android:layout_marginStart="@dimen/dimen_10dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:fontFamily="@font/montserrat_regular"
        android:textColor="@color/color_grey_7"
        android:textSize="@dimen/font_12sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvSourceUrl"
        tools:text="Fugit in inventore laborum. Aliquam amet aspernatur consectetur cum est non placeat provident quis vel voluptas. Ad." />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:background="@color/color_grey_b"
        app:layout_constraintTop_toBottomOf="@id/tvSourceDescription"
        android:layout_marginTop="@dimen/dimen_10dp"/>

</android.support.constraint.ConstraintLayout>